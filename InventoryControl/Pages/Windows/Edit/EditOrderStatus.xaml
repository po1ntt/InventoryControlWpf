<Window x:Class="InventoryControl.Pages.Windows.Edit.EditOrderStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryControl.Pages.Windows.Edit"
        mc:Ignorable="d"
        Title="EditOrderStatus" Height="300" Width="400"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Style="{StaticResource  BackgroundGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="140*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Изменение статуса" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30px" FontWeight="DemiBold" Grid.Row="0" Height="40" Margin="24,26,24,24" Width="344"></TextBlock>
        <StackPanel Grid.Row="1">
            <ComboBox Grid.Row="1" materialDesign:HintAssist.Hint="Выберите статус" x:Name="txbBrand" DisplayMemberPath="status1"  FontSize="20px"></ComboBox>
        </StackPanel>

        <Button Content="Сохранить" Grid.Row="2" Height="Auto" Click="Button_Click"  ></Button>
    </Grid>
</Window>
